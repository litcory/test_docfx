{
  "metadata": [
    {

      "src": [
        {      
          "files": [
            "**.csproj"
          ],
          "cwd": ".."
        }
      ],
      "dest": "api"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "output": "_site",
    "template": [
      "default",
      "modern"
    ],
    "globalMetadata": {
      "_appName": "test",
      "_appTitle": "test",
      "_enableSearch": true,
      "pdf": true
    }
  }
}